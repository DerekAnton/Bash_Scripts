while [ true ]
do
    supson=""
    numsupson=39
    memetime=$((RANDOM % ($numsupson - 1) + 1))
    for i in $(seq 1 $numsupson)
    do  
        supson="${supson}meme "
        #supson="${supson}¯\\_(ツ)_/¯ "

        if [ $i == $memetime ]
        then
            supson=${supson}"¯\\_(ツ)_/¯ "
            #supson=${supson}"meme"
        fi

    done

    echo $supson

    usleep $(((RANDOM * 1000) % 2000000 + 50000));
done
